<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id="texteditor" class="com.sshacker.tutorialpoint.TextEditor">
      <constructor-arg ref="spellchecker"></constructor-arg>
   </bean>

   <bean id="spellchecker" class="com.sshacker.tutorialpoint.SpellChecker"></bean>

   <!--passing constructor-args in order-->
   <bean id="foo" class="com.sshacker.tutorialpoint.Foo">
      <constructor-arg ref="texteditor"></constructor-arg>
      <constructor-arg ref="spellchecker"></constructor-arg>
   </bean>


</beans>